using microsoft.AspNetCore.Mvc;


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">LISTE DES CLIENTS</h1>
    <a class='btn btn-primary btn-sm'href="='/clients/Create'style="margin-lef:15px;margin-top:10px">nouveau</a>
    <div
        class="table-responsive"
    >
        <table
            class="table table-primary"
        >
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Surnom</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Addresse</th>


                </tr>
            </thead>
            <tbody>
               @foreach(var list in Models.listclient){
                    <td>@list.id</td>
                     <td>@list.surnom</td>
                     <td>@list.telephone</td>
                     <td>@list.addresse</td>




               }
            </tbody>
        </table>
    </div>
    

</div>
